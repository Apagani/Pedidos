<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp"
    android:background="@color/cologrisfondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView android:id="@+id/ImagenProducto"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/cargandoimagen"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/ImagenProducto"
                android:background="#FFFFFF">

                <TextView android:id="@+id/TxtNombreProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_alignParentTop="true"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:text="Telefono samsung de color dorado"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/TxtPrecioProdu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="@color/colorletra"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="USD"/>

                    <TextView android:id="@+id/TxtPrecioProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_below="@id/TxtNombreProducto"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/colorletra"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="$280"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/TxtDescripcionProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="19sp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/cologrisfondo">
                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:src="@drawable/truck" android:layout_marginLeft="25dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envio a acordar con el vendedor"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#696969"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANTIDAD"
                    android:textSize="21sp"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#696969" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/btn_menos"
                            android:text="-"
                            android:layout_marginLeft="15dp"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/colorletra"/>

                        <TextView
                            android:id="@+id/Txtcantidadpedida"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textColor="#696969"
                            android:background="@color/cologrisfondo"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="5" />

                        <Button
                            android:id="@+id/btn_mas"
                            android:text=" + "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/colorletra"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_add_carrito"
                    android:text="AGREGAR AL CARRITO"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop = "15dp"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="#000000"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>